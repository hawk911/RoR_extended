$(".errors").empty();
$(".alert").remove();
<% if @answer.errors.present? %>
  $('.errors').append('<%= j render "common/errors", resourse: @answer %>').appendTo(".errors");
<% else %>
  debbuger();
  $('#<%= answer__id(@answer) %>').replaceWith("<%= j render @answer %>");
  $('edit-answer-<%= @answer.id %>').hide();
  $('.edit-answer-link').show();
<% end %>
