$(".errors").empty();
$(".alert").remove();
<% if @answer.errors.present? %>
  $('.errors').append('<%= j render "common/errors", resourse: @answer %>').appendTo(".errors");
<% else %>
  $("#answer_<%=@answer.id %>").replaceWith("<%= j render 'answer', answer: @answer %>");
  $('form#edit-answer-<%= @answer.id %>').hide();
  $('.edit-answer-link').show();
<% end %>
