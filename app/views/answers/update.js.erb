$(".errors").empty();
$(".alert").remove();
<% if @answer.errors.present? %>
  $('.errors').append('<%= j render "common/errors", resourse: @answer %>').appendTo(".errors");
<% else %>
  <%if remotipart_submitted? %>
    $("#answer_<%=@answer.id %>").replaceWith("<%= j "#{ render @answer }" %>");
    <% else %>
   $("#answer_<%=@answer.id %>").replaceWith("<%= j render @answer %>");
  <% end %>
  $('form#edit-answer-<%= @answer.id %>').hide();
  $('.edit-answer-link').show();
<% end %>





