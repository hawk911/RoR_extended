$(".errors").empty();
$(".alert").remove();
<% if @question.errors.present? %>
  $('.errors').append('<%= j render "common/errors", resourse: @question %>').appendTo(".errors");
<% else %>
  $("#question_<%=@question.id %>").replaceWith("<%= j render @question %>");
  $('form#edit-question-<%= @question.id %>').hide();
  $('.edit-question-link').show();
<% end %>
