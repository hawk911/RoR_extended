$(".errors").empty();
$(".alert").remove();
comments_selector = ".<%=@comment.commentable_type.underscore%>_comments"
<% if @comment.errors.present? %>
  $('.errors').append('<%= j render "common/errors", resourse: @comment %>').appendTo(".errors");
<% else %>
  $(comments_selector).append("<%= j render @comment %>");
<% end %>
$('textarea#comment_body').val('');
